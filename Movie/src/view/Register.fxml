<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: GREY;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
   <children>
      <Label layoutX="138.0" layoutY="40.0" text="New User Registration" textFill="#ab0e0e">
         <font>
            <Font name="System Bold" size="24.0" />
         </font></Label>
      <Label layoutX="183.0" layoutY="104.0" />
      <TextField fx:id="txtUsername" layoutX="176.0" layoutY="98.0" promptText="Enter username">
         <font>
            <Font size="13.0" />
         </font></TextField>
      <TextField fx:id="txtFname" layoutX="176.0" layoutY="176.0" promptText="Enter First Name">
         <font>
            <Font size="13.0" />
         </font></TextField>
      <TextField fx:id="txtLname" layoutX="176.0" layoutY="215.0" promptText="Enter Last Name">
         <font>
            <Font size="13.0" />
         </font></TextField>
      <TextField fx:id="txtMobile" layoutX="176.0" layoutY="250.0" promptText="Enter Contact No">
         <font>
            <Font size="13.0" />
         </font></TextField>
      <Button fx:id="Register" layoutX="220.0" layoutY="315.0" mnemonicParsing="false" onAction="#handleRegister" text="REGISTER">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
      <Button fx:id="back" layoutX="385.0" layoutY="390.0" mnemonicParsing="false" onAction="#back" text="BACK">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Label fx:id="lblStatus1" layoutX="110.0" layoutY="370.0" prefHeight="17.0" prefWidth="162.0" text="Status" textFill="#c60c0c">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="txtPassword" layoutX="176.0" layoutY="135.0" promptText="Enter Password">
         <font>
            <Font size="13.0" />
         </font>
      </PasswordField>
   </children>
</AnchorPane>
